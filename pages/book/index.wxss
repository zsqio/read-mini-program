.page-container {
  background: #efefef;
}
.swiper-wrapper {
  width: 100%;
}
.swiper-item {
  width: 100%;
}
.search-placeholder {
  position: absolute;
  z-index: 2;
  right: 20rpx;
  top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .5);
}
.search-placeholder icon {
  margin: 20rpx 20rpx;
}


.book-wrapper {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.book-wrapper .book-item {
  background: #fff;
  position: relative;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.book-item .item-cover {
  width: 180rpx;
  height: 240rpx;
  margin-right: 20rpx;
}
.book-item .item-info {
  flex: 1;
}
.item-info text {
  display: block;
  margin-bottom: 10rpx;
}
.book-item .title {
  color: #333333;
  font-size: 32rpx;
  font-weight: 600;
}
.book-item .engTitle {
  color: #666666;
  font-size: 28rpx;
}
.book-item .author {
  color: #333333;
  font-size: 28rpx;
}
.book-item .publisher {
  color: #333333;
  font-size: 28rpx;
}
.book-item .score {
  color: #e09015;
  font-size: 24rpx;
}
.book-item .desc {
  color: #666666;
  font-size: 28rpx;
}

.hobby-wrapper {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.change-box {
  text-align: right;
  padding-right: 40rpx;
  box-sizing: border-box;
}
.change-box .change-btn {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.change-box .change-text {
  font-size: 28rpx;
  color: #666;
  vertical-align: middle;
}
.hobby-content {
  width: 100%;
  margin-top: 40rpx;
}
.hobby-content .hobby-item {
  width: 33.33%;
  display: inline-block;
  margin-bottom: 20rpx;
}
.hobby-item .item-image{
  width: 160rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
}
.hobby-item .item-name {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  
}
.loading-box {
  text-align: center;
  font-size: 28rpx;
}
