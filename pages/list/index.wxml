<view class="page-container">
    <view class="book-wrapper">
        <block wx:for="{{bookList}}">
            <view class="book-item" bindtap="goDetail" data-name="{{item.name}}">
                <view class="item-cover">
                    <image src="{{item.cover}}"/>
                </view>
                <view class="item-info">
                    <text class="title">{{item.name}}</text>
                    <text class="engTitle">{{item.engName}}</text>
                    <text class="author">{{item.author}}</text>
                    <text class="publisher">{{item.publisher}}</text>
                    <text class="score">{{item.score}}åˆ†</text>
                    <text class="desc">{{item.desc}}</text>
                </view>
            </view>
        </block>
    </view>
</view>
