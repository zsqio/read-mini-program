.page-container {
    padding: 20rpx;
    box-sizing: border-box;
    background: #fff;
}
.search-box {
    display: flex;
    margin-bottom: 20rpx;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
    border: 4rpx solid #1afa29;
    background: #fff;
}

.search-box input {
    flex: 1;
    font-size: 26rpx;
}

.search-box icon {
    padding: 10rpx;
}
.inform-box {
    margin-top: 200rpx;
}
.inform-box .inform-logo {
    margin: 0 auto;
    margin-bottom: 20rpx;
    width: 100rpx;
    height: 100rpx;
    background-size: cover;
}
.inform-box .inform-text {
    font-size: 28rpx;
    color: #333;
    text-align: center;
    padding: 0 40rpx;
    box-sizing: border-box;
}
.search-result {
    display: flex;
}
.search-result .result-cover {
  width: 180rpx;
  height: 240rpx;
  margin-right: 20rpx;
}
.search-result .result-info {
  flex: 1;
}
.result-info text {
  display: block;
  margin-bottom: 10rpx;
}
.search-result .title {
  color: #333333;
  font-size: 32rpx;
  font-weight: 600;
}
.search-result .engTitle {
  color: #666666;
  font-size: 28rpx;
}
.search-result .author {
  color: #333333;
  font-size: 28rpx;
}
.search-result .score {
  color: #e09015;
  font-size: 24rpx;
}
.search-result .desc {
  color: #666666;
  font-size: 28rpx;
}
