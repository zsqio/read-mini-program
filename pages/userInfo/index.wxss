
.list-wrapper {
  margin-top: 20rpx;
}
.list-item{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #e4e4e4;
}
.list-item .avatar {
    width: 80rpx;
    height: 80rpx;
    display: block;
}
.list-item .item-name{
  flex: 1;
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}
.item-value{
  color: #666;
  font-size: 28rpx;
  margin-left: 10rpx;
}